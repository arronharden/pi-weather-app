{
  "name": "pi-weather-app",
  "version": "1.0.0",
  "private": true,
  "proxy": "http://localhost:8080",
  "dependencies": {
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "jwk-to-pem": "^2.0.4",
    "pg": "^7.18.2",
    "pm2": "^5.2.2",
    "react": "^16.13.1",
    "react-datepicker": "^2.16.0",
    "react-dom": "^16.13.1",
    "react-scripts": "^3.4.1",
    "recharts": "^2.1.14",
    "request": "^2.88.2",
    "twitter": "^1.7.1",
    "yargs": "^14.2.3"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^13.0.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^9.2.0",
    "eslint-plugin-promise": "^4.2.1",
